<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/notification_priority_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="notification_priority_max"/>
        <Button
            android:id="@+id/notification_priority_high"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="notification_priority_high"/>
        <Button
            android:id="@+id/notification_priority_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="notification_priority_default"/>
        <Button
            android:id="@+id/notification_priority_low"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="notification_priority_low"/>
        <Button
            android:id="@+id/notification_priority_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="notification_priority_min"/>

        <Button
            android:id="@+id/user_define_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user_define_notification"/>

    </LinearLayout>

</ScrollView>
