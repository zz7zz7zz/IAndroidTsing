<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.open.iandroidtsing" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />    <!--内置sd卡的写权限-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />     <!-- 程序可以读取设备外部存储空间 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" android:windowSoftInputMode="adjustUnspecified|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 通知相关-->
        <activity android:name=".notification.NotificationActivity" android:screenOrientation="portrait" />
        <activity android:name=".notification.NotificationMonitorActivity" android:screenOrientation="portrait" android:windowSoftInputMode="adjustUnspecified|stateHidden"/>
        <activity android:name=".notification.NotificationMonitorHistoryActivity" android:screenOrientation="portrait" />
        <activity android:name=".notification.NotificationMonitorHistoryDetailActivity" android:screenOrientation="portrait" />
        <service
            android:name=".notification.NotificationMonitorService"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE" >
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" >
                </action>
            </intent-filter>
        </service>
        <service android:name=".notification.NotificationMonitorAccessibilityService"
            android:label="@string/nf_accessibility_service_label"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
               <intent-filter>
                   <action android:name="android.accessibilityservice.AccessibilityService"/>
               </intent-filter>
            <meta-data android:name="android.accessibilityservice"
                android:resource="@xml/nf_accessibility_service_config"></meta-data>
        </service>

        <!-- 弱引用相关-->
        <activity android:name=".weakReference.WRA_Activity" android:screenOrientation="portrait" />
        <activity android:name=".weakReference.WRB_Activity" android:screenOrientation="portrait" />

        <!-- ViewPager相关-->
        <activity android:name=".fragment.FragmentPagerActivity" android:screenOrientation="portrait" />
        <activity android:name=".fragment.FragmentStatePagerActivity" android:screenOrientation="portrait" />

        <!-- 配置相关-->
        <activity android:name=".sharedprefs.SharedPrefsActivity" android:screenOrientation="portrait" />

        <!-- 图片相关相关-->
        <activity android:name=".image.ImageActivity" android:screenOrientation="portrait" />
        <activity android:name=".image.Image2Activity" android:screenOrientation="portrait" />

        <!-- TextView相关相关-->
        <activity android:name=".textview.TextViewActivity" android:screenOrientation="portrait" />

        <!-- 网络测试-->
        <activity android:name=".net.BioSocketConnectionActivity" android:screenOrientation="portrait" />
        <activity android:name=".net.NioSocketConnectionActivity" android:screenOrientation="portrait" />

    </application>

</manifest>