<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom" >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.open.widgets.listview.IListViewHeaderLoadingView
            android:id="@+id/header_loading_animview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:load_background="@drawable/lib_listview_header_loading_background"
            app:load_foreground="@drawable/lib_listview_header_loading_airplane"
            android:layout_gravity="bottom"/>
        <TextView
            android:id="@+id/header_loading_toast"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#d6e9f7"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="#569dd1"
            android:textSize="16sp"
            android:layout_gravity="bottom"
            android:visibility="invisible"/>
    </FrameLayout>
</LinearLayout>